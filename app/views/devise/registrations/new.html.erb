<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :name %><br />
  <%= f.text_field :name %></p>

  <p><%= f.label 'sign_up_email', "Email" %><br />
  <%= f.email_field :email, :id => 'sign_up_email' %></p>

  <p><%= f.label 'sign_up_password', "Password" %><br />
  <%= f.password_field :password, :id => 'sign_up_password' %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <%= f.hidden_field :type,  :value => params[:user_type] %>

  <p><%= f.submit "Sign up" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
